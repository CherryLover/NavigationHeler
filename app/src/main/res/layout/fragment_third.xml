<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="This is third Fragment" />

    <Button
        android:id="@+id/btn_third_exit"
        style="@style/baseBtn"
        android:text="Exit to middle fragment" />

    <Button
        android:id="@+id/btn_third_navigate_up_to_root"
        style="@style/baseBtn"
        android:text="Navigate Up to Root" />

    <Button
        android:id="@+id/btn_third_back_to_root"
        style="@style/baseBtn"
        android:text="Close middle" />

</LinearLayout>